# ---------- Stage 1: build ----------
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install   # installs devDependencies (vite, etc.)
COPY . .
RUN npm run build

# ---------- Stage 2: production ----------
FROM node:20-alpine AS prod
WORKDIR /app
COPY package*.json ./
RUN npm install --omit=dev   # prod deps only
COPY --from=builder /app/dist ./dist
CMD ["node", "dist/index.js"]


